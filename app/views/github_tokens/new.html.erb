<% content_for(:title) { "Add GitHub Token - Paid" } %>

<div class="mx-auto max-w-3xl px-4 py-8 sm:px-6 lg:px-8">
  <div class="mb-6">
    <%= link_to github_tokens_path, class: "inline-flex items-center text-sm font-medium text-gray-500 hover:text-gray-700" do %>
      <svg class="mr-1 h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
        <path fill-rule="evenodd" d="M17 10a.75.75 0 0 1-.75.75H5.612l4.158 3.96a.75.75 0 1 1-1.04 1.08l-5.5-5.25a.75.75 0 0 1 0-1.08l5.5-5.25a.75.75 0 1 1 1.04 1.08L5.612 9.25H16.25A.75.75 0 0 1 17 10Z" clip-rule="evenodd" />
      </svg>
      Back to Tokens
    <% end %>
  </div>

  <div class="bg-white shadow sm:rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <h1 class="text-xl font-semibold text-gray-900">Add GitHub Token</h1>
      <p class="mt-1 text-sm text-gray-500">
        Add a Personal Access Token to connect Paid to your GitHub repositories.
      </p>

      <div class="mt-6 rounded-md bg-blue-50 p-4">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-blue-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd" d="M18 10a8 8 0 1 1-16 0 8 8 0 0 1 16 0Zm-7-4a1 1 0 1 1-2 0 1 1 0 0 1 2 0ZM9 9a.75.75 0 0 0 0 1.5h.253a.25.25 0 0 1 .244.304l-.459 2.066A1.75 1.75 0 0 0 10.747 15H11a.75.75 0 0 0 0-1.5h-.253a.25.25 0 0 1-.244-.304l.459-2.066A1.75 1.75 0 0 0 9.253 9H9Z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-blue-800">Required Permissions</h3>
            <div class="mt-2 text-sm text-blue-700">
              <p class="mb-2">Create a <a href="https://github.com/settings/tokens?type=beta" target="_blank" rel="noopener noreferrer" class="font-medium underline">Fine-grained Personal Access Token</a> with the following permissions:</p>
              <ul class="list-disc space-y-1 pl-5">
                <li><strong>Contents:</strong> Read and write - to create branches and commits</li>
                <li><strong>Issues:</strong> Read and write - to read issues and update labels</li>
                <li><strong>Pull requests:</strong> Read and write - to create PRs</li>
                <li><strong>Metadata:</strong> Read-only - required for API access (automatically included)</li>
              </ul>
              <p class="mt-3 text-xs text-blue-600">
                <strong>Optional:</strong> For GitHub Projects V2 integration, also add <strong>Projects: Read and write</strong> permission.
              </p>
            </div>
          </div>
        </div>
      </div>

      <%= form_with model: @github_token, url: github_tokens_path, class: "mt-6" do |form| %>
        <% if @github_token.errors.any? %>
          <div class="mb-6 rounded-md bg-red-50 p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 1 0 0-16 8 8 0 0 0 0 16ZM8.28 7.22a.75.75 0 0 0-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 1 0 1.06 1.06L10 11.06l1.72 1.72a.75.75 0 1 0 1.06-1.06L11.06 10l1.72-1.72a.75.75 0 0 0-1.06-1.06L10 8.94 8.28 7.22Z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">
                  <%= pluralize(@github_token.errors.count, "error") %> prevented this token from being saved:
                </h3>
                <div class="mt-2 text-sm text-red-700">
                  <ul class="list-disc space-y-1 pl-5">
                    <% @github_token.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <div class="space-y-6">
          <div>
            <%= form.label :name, class: "block text-sm font-medium leading-6 text-gray-900" %>
            <div class="mt-2">
              <%= form.text_field :name, class: "block w-full rounded-md border-0 px-3 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6", placeholder: "e.g., My Development Token", required: true %>
            </div>
            <p class="mt-1 text-xs text-gray-500">A friendly name to identify this token.</p>
          </div>

          <div>
            <%= form.label :token, "Personal Access Token", class: "block text-sm font-medium leading-6 text-gray-900" %>
            <div class="mt-2">
              <%= form.text_field :token, class: "block w-full rounded-md border-0 px-3 py-1.5 font-mono text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6", placeholder: "ghp_xxxx or github_pat_xxxx", autocomplete: "off", spellcheck: false, required: true %>
            </div>
            <p class="mt-1 text-xs text-gray-500">Your token is encrypted at rest and never displayed after saving.</p>
          </div>
        </div>

        <div class="mt-6 flex items-center justify-end gap-x-4">
          <%= link_to "Cancel", github_tokens_path, class: "text-sm font-semibold leading-6 text-gray-900 hover:text-gray-700" %>
          <%= form.submit "Add Token", class: "rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 cursor-pointer" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
